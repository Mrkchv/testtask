<project>
	<build>
		<plugins>
			<plugin>
				<groupId>
					org.postgresql
				</groupId>
				<artifactId>
					postgresql
				</artifactId>
				<version>
					9.4.1208
				</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>package</phase>
						<goals><goal>copy-dependencies</goal></goals>		
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>